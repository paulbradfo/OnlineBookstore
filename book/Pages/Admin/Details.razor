@page "/admin/books/details/{id:long}"

<h3 class="bg-primary text-white text-center p-1">Details</h3>

<table class="table table-sm table-bordered table-striped">

    <tbody>
        <tr><th>Book ID:</th><td>@bk.BookId</td></tr>
        <tr><th>Title:</th><td>@bk.Title</td></tr>
        <tr><th>Author:</th><td>@bk.Author</td></tr>
        <tr><th>Publisher:</th><td>@bk.Publisher</td></tr>
        <tr><th>ISBN:</th><td>@bk.Isbn</td></tr>
        <tr><th>Classification:</th><td>@bk.Classification</td></tr>
        <tr><th>Category:</th><td>@bk.Category</td></tr>
        <tr><th>Page Count:</th><td>@bk.PageCount</td></tr>
        <tr><th>Price:</th><td>$@bk.Price</td></tr>
    </tbody>
    
</table>

<div class="text-center">
    <NavLink class="btn btn-warning m-1" href="@EditUrl">Edit</NavLink>
    <NavLink class="btn btn-secondary m-1" href="/admin/books">Back</NavLink>
</div>

@code {

    [Inject]
    public IbookRepository repo { get; set; }

    [Parameter]
    public long Id { get; set; }

    public Books bk { get; set; }

    protected override void OnParametersSet()
    {
        bk = repo.Books.FirstOrDefault(x => x.BookId == Id);
    }

    public string EditUrl => $"/admin/books/edit/{bk.BookId}";
}

