@{
}

@model Books

<div class="card m-2 p-2">

    <div class="p-3">

        <h3>@Model.Title</h3>
        <p class="text-muted">By @Model.Author</p>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">Category: @Model.Category</li>
            <li class="list-group-item">Number of Pages: @Model.PageCount</li>
            <li class="list-group-item">Publisher: @Model.Publisher</li>
            <li class="list-group-item">Price: $@Model.Price</li>
            <li class="list-group-item">ISBN Number: @Model.Isbn</li>
        </ul>

        <form method="post" asp-page="/Cart">

            <input type="hidden" asp-for="@Model.BookId" />

            <input type="hidden" name="returnURL" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

            <span class="card-text">
                <button type="submit" class="btn btn-primary float-end">Add to Cart</button>
            </span>

        </form>

    </div>

</div><br />

